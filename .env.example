# 기본 인터페이스 (cli, discord 등)
DEFAULT_INTERFACE=cli

# AI 어시스턴트 설정
AI_ASSISTANT_NAME=Angmini

# Discord 봇 설정
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_PROACTIVE_CHANNEL_ID=your-channel-id-for-proactive-alerts

# Google Gemini 설정
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=models/gemini-1.5-pro

# Notion 통합 설정
NOTION_API_KEY=your-notion-integration-token
NOTION_TODO_DATABASE_ID=your-todo-database-id
NOTION_PROJECT_DATABASE_ID=your-project-database-id
NOTION_TASK_TITLE_PROPERTY=작업명
NOTION_TASK_STATUS_PROPERTY=작업상태
NOTION_TASK_DUE_PROPERTY=마감일
NOTION_TASK_NOTES_PROPERTY=작업설명
NOTION_TASK_RELATION_PROPERTY=경험/프로젝트
NOTION_TASK_ESTIMATED_HOURS_PROPERTY=예상소요시간

# 로깅 레벨
LOG_LEVEL=INFO

# 스트리밍 출력 설정
STREAM_DELAY=0.05

# CrewAI 에이전트 설정
AGENT_MAX_ITER=5                    # 에이전트 최대 반복 횟수
AGENT_ALLOW_DELEGATION=false        # 에이전트 간 위임 허용 여부

# CrewAI Crew 설정
CREW_MEMORY_ENABLED=false           # CrewAI 내장 메모리 사용 (기본: 자체 메모리 시스템 사용)
CREW_PROCESS_TYPE=hierarchical      # Crew 실행 방식 (hierarchical, sequential)

# Proactive Alert System 설정
PROACTIVE_ENABLED=true              # 능동 알림 시스템 활성화 (기본: true)
PROACTIVE_WORK_START_HOUR=9         # 활동 시작 시간 (기본: 9시)
PROACTIVE_WORK_END_HOUR=24          # 활동 종료 시간 (기본: 24시)
PROACTIVE_INTERVAL_MEAN=30          # 평균 실행 간격(분) (기본: 30분)
PROACTIVE_INTERVAL_STD=15           # 표준편차(분) (기본: 15분)
PROACTIVE_D2_D3_ALERT=true          # D-2/D-3 사전 알림 활성화 (기본: true)
PROACTIVE_CAPACITY_ALERT=true       # 작업 용량 분석 알림 활성화 (기본: true)